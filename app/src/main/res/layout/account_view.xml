<?xml version="1.0" encoding="utf-8"?>
<com.example.jessemaynard.peoplemon.Views.AccountView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:paddingStart="10dp"
        android:textSize="20sp"
        android:text="UserName"
        android:layout_alignParentTop="true"
        android:id="@+id/user_name"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:paddingStart="10dp"
        android:textSize="20sp"
        android:text="E-mail Address"
        android:id="@+id/email_address"
        android:layout_below="@id/user_name"/>

    <Button
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:text="@string/select_avatar"
        android:id="@+id/upload_avatar"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"/>

    <Button
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:text="@string/submit_username"
        android:id="@+id/change_username"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/upload_avatar"
        android:layout_alignParentStart="true" />
    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/edit_name_field"
        android:hint="@string/new_username"
        android:layout_above="@id/change_username"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/profile_avatar"
        android:layout_below="@+id/email_address"
        android:layout_alignParentStart="true" />


</com.example.jessemaynard.peoplemon.Views.AccountView>

